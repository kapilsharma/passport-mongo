extends layout_admin

block content
	div.container
		div.row
			div.col-sm-6.col-md-4.col-md-offset-4
				#user
					h1.text-center.login-title Welcome #{data.user.firstName}. Check your details below:
						div.signup-wall
							ul.user-details
								li Username ---> #{data.user.username}
								li Email    ---> #{data.user.email}
								li First Name ---> #{data.user.firstName} 
								li Last Name ---> #{data.user.lastName}
								li Role ---> #{data.user.role}
						